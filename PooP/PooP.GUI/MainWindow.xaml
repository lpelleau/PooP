<Window x:Class="MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:l="clr-namespace:WpfApplication2"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Choix des races" Height="121.472" Width="165.735">
    <Window.Resources>
        <l:NegateBool x:Key="NegateBool"/>
    </Window.Resources>
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="59*"/>
            <ColumnDefinition Width="62*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Race J1" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
        <RadioButton Name="Elf1" Content="Elf" HorizontalAlignment="Left" Margin="8,28,0,0" VerticalAlignment="Top" GroupName="Race1" IsEnabled="{Binding Path=IsChecked, ElementName=Elf2, Converter={StaticResource NegateBool}}" Height="16" Width="29"/>
        <RadioButton Name="Orc1" Content="Human" HorizontalAlignment="Left" Margin="8,60,0,0" VerticalAlignment="Top" GroupName="Race1"  IsEnabled="{Binding Path=IsChecked, ElementName=Orc2, Converter={StaticResource NegateBool}}" Height="16" Width="55"/>
        <RadioButton Name="Human1" Content="Orc" HorizontalAlignment="Left" Margin="8,44,0,0" VerticalAlignment="Top" GroupName="Race1" RenderTransformOrigin="0.5,0.5"  IsEnabled="{Binding Path=IsChecked, ElementName=Human2, Converter={StaticResource NegateBool}}" Height="16" Width="35"/>

        <Label Content="Race J2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold"/>
        <RadioButton Name="Elf2" Content="Elf" HorizontalAlignment="Left" Margin="10,28,0,0" VerticalAlignment="Top" GroupName="Race2" RenderTransformOrigin="0.724,0.25" IsEnabled="{Binding Path=IsChecked, ElementName=Elf1, Converter={StaticResource NegateBool}}" Grid.Column="1" Height="16" Width="29" />
        <RadioButton Name="Orc2" Content="Human" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" GroupName="Race2" IsEnabled="{Binding Path=IsChecked, ElementName=Orc1, Converter={StaticResource NegateBool}}" Grid.Column="1" Height="16" Width="55"/>
        <RadioButton Name="Human2" Content="Orc" HorizontalAlignment="Left" Margin="10,44,0,0" VerticalAlignment="Top" GroupName="Race2" RenderTransformOrigin="2.029,0.625" IsEnabled="{Binding Path=IsChecked, ElementName=Human1, Converter={StaticResource NegateBool}}" Grid.Column="1" Height="16" Width="35"/>
    </Grid>
</Window>
