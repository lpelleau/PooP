<Page x:Class="PooP.GUI.Views.MainMenu.MainMenuInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:l="clr-namespace:PooP.GUI.Views.MainMenu"
      mc:Ignorable="d" 
      Title="Main menu">
    <Canvas Width="800" Height="600">
        <Canvas.Background>
            <ImageBrush ImageSource="/SmallWorld;component/images/mainMenu.png" />
        </Canvas.Background>
        <Button Content="NOUVELLE PARTIE" Command="{Binding NewGame}" Canvas.Left="233" Canvas.Top="149" Height="44" Width="341" FontSize="30" Background="{x:Null}" FontFamily="Rockwell Extra Bold"/>
        <Button Content="CHARGEMENT" Canvas.Left="233" Canvas.Top="258" Height="44" Width="341" FontSize="30" Background="{x:Null}" FontFamily="Rockwell Extra Bold"/>
        <Button Content="CRÉDITS" Command="{Binding Credits}" Canvas.Left="233" Canvas.Top="362" Height="44" Width="341" FontSize="30" Background="{x:Null}" FontFamily="Rockwell Extra Bold"/>
        <Button Content="QUITTER" Command="{Binding Quit}" CommandParameter="{Binding ElementName=Window}" Canvas.Left="233" Canvas.Top="467" Height="44" Width="341" FontSize="30" Background="{x:Null}" FontFamily="Rockwell Extra Bold"/>
    </Canvas>
</Page>
