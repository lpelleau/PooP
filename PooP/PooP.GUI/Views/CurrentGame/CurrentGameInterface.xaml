<Page x:Class="PooP.GUI.Views.CurrentGame.CurrentGameInterface"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="Current game">
    <Canvas Width="800" Height="600">
        <Canvas.Background>
            <ImageBrush ImageSource="/SmallWorld;component/images/pages/currentGame.png" />
        </Canvas.Background>

        <Grid Name="Map" Height="400" Width="400" Canvas.Left="200" Canvas.Top="157">
            <Grid.ColumnDefinitions>

            </Grid.ColumnDefinitions>
        </Grid>
        <ListBox x:Name="UnitsP0" Height="326" Canvas.Left="23" Canvas.Top="157" Width="158" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button x:Name="back_button" Content="MENU" Command="{Binding Back}" Canvas.Left="40" Canvas.Top="537" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FF1D1D1D" FontFamily="Rockwell Extra Bold" FontSize="22" />
        <Label Content="Label" Canvas.Left="400" Canvas.Top="562" RenderTransformOrigin="-0.473,-0.8"/>
        <TextBox Height="23" Canvas.Left="443" TextWrapping="Wrap" Text="{Binding FileName}" Canvas.Top="565" Width="120"/>
        <Button Content="Button" Command="{Binding Save}" Canvas.Left="568" Canvas.Top="568" Width="75"/>
        <ListBox x:Name="UnitsP1" Height="326" Canvas.Right="23" Canvas.Top="157" Width="158" Background="{x:Null}" BorderBrush="{x:Null}"/>
        <Button Content="Move" Command="{Binding Move}" Canvas.Left="200" Canvas.Top="568" Width="75"/>
        <Button Content="Attack" Canvas.Left="280" Canvas.Top="568" Width="75"/>
        <!--Command="{Binding Attack}"-->
        <Button Content="End turn" Command="{Binding EndTurn}" Canvas.Left="360" Canvas.Top="568" Width="75"/>
    </Canvas>
</Page>
